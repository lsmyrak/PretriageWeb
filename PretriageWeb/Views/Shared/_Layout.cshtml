<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Pretriage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index"><button class="btn btn-block btn-primary">Lista Pacjentów</button></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Pretriage" asp-action="Add"><button class="btn btn-block btn-primary">Dodaj Pacjenta</button></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Config" asp-action="Index"><button class="btn btn-block btn-danger">Konfiguracja</button></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="AdminPanel" asp-action="Index"><button class="btn btn-block btn-danger">Edycja Tryb Administratora</button></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Excel" asp-action="Index"><button class="btn btn-block btn-danger">Export do Excel</button></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Login"><button class="btn btn-block btn-danger">Zaloguj jako Admin</button></a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
